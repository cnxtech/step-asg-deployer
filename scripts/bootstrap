#!/bin/bash
# bootstrap asg-deployer
# assume-role to the correct account
set -e

function ensure {
  if ! [ -x "$(command -v $1)" ]; then
    echo "Error: $1 is not installed." >&2
    exit 1
  fi
}

# ruby bundle terraform zip and go are required
ensure ruby
ensure bundle
ensure terraform
ensure zip
ensure go

bundle install

./scripts/geo apply resources/step-asg-deployer.rb

./scripts/bootstrap_deployer
